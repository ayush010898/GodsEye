doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We" crossorigin="anonymous")
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.min.js" integrity="sha384-cn7l7gDp0eyniUwwAZgrzD06kc/tftFf19TOAs2zVinnD/C7E91j9yyk5//jjpt/" crossorigin="anonymous")
        title Employee Dashboard
    body 
        h1 Employee Dashboard
        - if(emp)
            p=emp.tasks.steps
            p=emp.courseEmp.courseID[0].amountCompleted
            - if(emp.courseEmp.profilePhoto)
                p=emp.courseEmp.profilePhoto
            - else 
                img(src='http://localhost:7901/images/default.jpg')    
       
        
        form(method='POST' action='/empUpdateToDo')
            input(type='submit' value='Update')
        
        form(method='GET' action='/employeeLogout')
            input(type='submit' value='Logout')
       
        form(method='POST' action='/empUpdateCourses')
            input(type='submit' value='Update Course as Done')
        
        form(method='POST' action='/empUpdateToDo')
            input(type='submit' value='Update Task as Done')

        form(method='POST' action='/uploadProfile' enctype="multipart/form-data")
            input(type='text' name='sampleText')
            input(type="file" id="file" name="empProfile")
            input(type="submit" value="Upload" class='btn btn-primary btn-block')